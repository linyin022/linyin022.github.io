.post-wrap
  .categories-card
    margin 0 auto
    margin-top 1em
    display flex
    align-items center
    justify-content space-between
    flex-direction row
    flex-wrap wrap
    padding 0 2.5em
    line-height 1.6em
    .icon {
      width: 1em;
      height: 1em;
      vertical-align: -0.15em;
      fill: currentColor;
      overflow: hidden;
    }
    .card-item
      font-size 14px
      text-align left
      display flex
      align-items flex-start
      //margin-top 2em
      min-height 1em
      padding 0 2%
      position relative
      .categories
        overflow hidden
